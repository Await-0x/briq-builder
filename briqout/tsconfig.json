{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "nodenext",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "composite": true,
        "jsx": "preserve",
        "types": ["@types/three", "vitest/globals"],
        "paths": {
            "@/*": ["./*"]
        }
    }
}
